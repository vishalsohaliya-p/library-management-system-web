{% extends 'layouts/main.html.twig' %}

{% block title %}Language
{% endblock %}

{% block body %}
	<!-- [ breadcrumb ] start -->
	<div class="page-header">
		<div class="page-block">
			<div class="row align-items-center">
				<div class="col-md-12">
					<div class="page-header-title">
						<h5 class="mb-0">Edit Language</h5>
					</div>
				</div>
				<div class="col-md-12">
					<ul class="breadcrumb mb-0">
						<li class="breadcrumb-item">
							<a href="../dashboard">Home</a>
						</li>
						<li class="breadcrumb-item">
							<a href="javascript: void(0)">Language</a>
						</li>
						<li class="breadcrumb-item" aria-current="page">Edit Language</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
	<!-- [ breadcrumb ] end -->

	<!-- [ Main Content ] start -->
	<div
		class="row">

		<!-- [ Recent Users ] start -->
		<div class="col-xl-8 col-md-6">
			<div class="card Recent-Users table-card">
				<div class="card-header d-flex justify-content-between align-items-center">
					<h5>Edit Language</h5>
				</div>
				<div class="card-body px-0 py-3">
					<div class="col-xl-8 col-md-6 px-5">
						{{ form_start(form) }}

						<div class="mb-3">
							{{ form_label(form.languageName, null, {'label_attr': {'class': 'form-label'}}) }}
							{{ form_widget(form.languageName, {'attr': {'class': 'form-control my-custom-class'}}) }}
							{{ form_errors(form.languageName) }}
						</div>

						<div class="form-check mb-3">
							{{ form_widget(form.isActive, {'attr': {'class': 'form-check-input'}}) }}
							{{ form_label(form.isActive, null, {'label_attr': {'class': 'form-check-label'}}) }}
							{{ form_errors(form.isActive) }}
						</div>

						<button type="submit" class="btn btn-primary">Update</button>
                        <a href="{{ path('language_list') }}" class="btn btn-secondary">Cancel</a>

						{{ form_end(form) }}
					</div>

				</div>
			</div>
		</div>
		<!-- [ Recent Users ] end -->
	</div>
{% endblock %}
